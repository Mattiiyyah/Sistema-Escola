<%- include('includes/head') %>
    <%- include('includes/navbar') %>

        <%- include('includes/message') %>

            <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center py-5"
                style="background-color: #e3f2fd;">

                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-10 col-lg-12">
                            <div class="card border-0 shadow-lg rounded-5 overflow-hidden">
                                <div class="row g-0">

                                    <div class="col-lg-6 d-none d-lg-block position-relative bg-primary">
                                        <img src="/assets/img/escola.png" alt="Fachada da Escola"
                                            class="img-fluid h-100 w-100 object-fit-cover" style="opacity: 0.9;">

                                        <div
                                            class="position-absolute bottom-0 start-0 p-5 text-white bg-dark bg-opacity-50 w-100">
                                            <h4 class="fw-bold">Gestão Escolar</h4>
                                            <p class="small mb-0">Sistema exclusivo para administração e coordenação
                                                pedagógica.</p>
                                        </div>
                                    </div>

                                    <div class="col-lg-6 bg-white p-5">

                                        <div class="text-center mb-4">
                                            <img src="/assets/img/logo.png" alt="Logo Comeia Girassol" width="80"
                                                class="mb-3">
                                            <h3 class="fw-bold text-secondary">Área Administrativa</h3>
                                            <p class="text-muted small">Insira suas credenciais de gestor</p>
                                        </div>

                                        <ul class="nav nav-pills nav-fill mb-4 p-1 rounded-pill bg-light" id="pills-tab"
                                            role="tablist">
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link active rounded-pill fw-bold"
                                                    id="pills-login-tab" data-bs-toggle="pill"
                                                    data-bs-target="#pills-login" type="button" role="tab"
                                                    aria-controls="pills-login" aria-selected="true">Login</button>
                                            </li>
                                            <li class="nav-item" role="presentation">
                                                <button class="nav-link rounded-pill fw-bold" id="pills-register-tab"
                                                    data-bs-toggle="pill" data-bs-target="#pills-register" type="button"
                                                    role="tab" aria-controls="pills-register" aria-selected="false">Novo
                                                    Admin</button>
                                            </li>
                                        </ul>

                                        <div class="tab-content" id="pills-tabContent">

                                            <div class="tab-pane fade show active" id="pills-login" role="tabpanel"
                                                aria-labelledby="pills-login-tab">

                                                <div
                                                    class="alert alert-light border-0 text-center text-muted small mb-3">
                                                    <i class="bi bi-lock-fill me-1"></i> Ambiente Seguro
                                                </div>

                                                <form action="/login/login" method="POST">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                                    <div class="form-floating mb-3">
                                                        <input type="email" class="form-control rounded-4"
                                                            id="loginEmail" name="email" placeholder="nome@exemplo.com" required>
                                                        <label for="loginEmail">E-mail Corporativo</label>
                                                    </div>
                                                    <div class="form-floating mb-3">
                                                        <input type="password" class="form-control rounded-4"
                                                            id="loginPassword" name="password" placeholder="Senha" required>
                                                        <label for="loginPassword">Senha de Acesso</label>
                                                        <a href="/login/redefinir"
                                                        class="small text-muted text-decoration-none">Esqueceu sua
                                                        senha?</a>
                                                    </div>

                                                    <button type="submit"
                                                        class="btn btn-primary w-100 btn-lg rounded-pill fw-bold shadow-sm mb-1">
                                                        Entrar no Painel
                                                    </button>
                                                </form>
                                            </div>

                                            <div class="tab-pane fade" id="pills-register" role="tabpanel"
                                                aria-labelledby="pills-register-tab">

                                                <div class="alert alert-warning border-0 text-center small mb-3">
                                                    <i class="bi bi-exclamation-circle-fill me-1"></i> Cadastro de novo
                                                    gestor
                                                </div>

                                                <form action="/login/register" method="POST">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                                    <div class="form-floating mb-3">
                                                        <input type="text" class="form-control rounded-4"
                                                            id="registerName" name="nome" placeholder="Seu Nome" required>
                                                        <label for="registerName">Nome do Responsável</label>
                                                    </div>

                                                    <div class="form-floating mb-3">
                                                        <input type="email" class="form-control rounded-4"
                                                            id="registerEmail" name="email"
                                                            placeholder="nome@exemplo.com" required>
                                                        <label for="registerEmail">E-mail Corporativo</label>
                                                    </div>


                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-floating mb-4">
                                                                <input type="password" class="form-control rounded-4"
                                                                    id="registerPassword" name="password"
                                                                    placeholder="Senha" required>
                                                                <label for="registerPassword">Senha</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-floating mb-4">
                                                                <input type="password" class="form-control rounded-4"
                                                                    id="confirmpassword" name="confirmpassword"
                                                                    placeholder="Confirmar" required>
                                                                <label for="confirmPassword">Confirmar</label>
                                                            </div>
                                                        </div>
                                                    </div>


                                                    <button type="submit"
                                                        class="btn btn-warning w-100 btn-lg rounded-pill fw-bold text-white shadow-sm">
                                                        Cadastrar Administrador
                                                    </button>
                                                </form>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <a href="/" class="text-muted text-decoration-none small">
                                    <i class="bi bi-arrow-left"></i> Voltar para o site
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <%- include('includes/footer') %>