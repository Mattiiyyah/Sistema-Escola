<%- include('includes/head') %>
<%- include('includes/navbar') %>

<%- include('includes/message') %>

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center py-5" style="background-color: #e3f2fd;">
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12">
                <div class="card border-0 shadow-lg rounded-5 overflow-hidden">
                    <div class="row g-0">
                        
                        <div class="col-lg-6 d-none d-lg-block position-relative bg-primary">
                            <img src="/assets/img/escola.png" alt="Fachada da Escola" class="img-fluid h-100 w-100 object-fit-cover" style="opacity: 0.8; filter: grayscale(30%);">
                            
                            <div class="position-absolute bottom-0 start-0 p-5 text-white bg-dark bg-opacity-75 w-100">
                                <h4 class="fw-bold"><i class="bi bi-shield-lock-fill me-2"></i>Seguran√ßa</h4>
                                <p class="small mb-0">Crie uma nova senha forte para proteger o acesso aos dados dos alunos.</p>
                            </div>
                        </div>

                        <div class="col-lg-6 bg-white p-5">
                            
                            <div class="text-center mb-4">
                                <img src="/assets/img/logo.png" alt="Logo" width="70" class="mb-3">
                                <h3 class="fw-bold text-secondary">Redefinir Senha</h3>
                                <p class="text-muted small">Preencha os dados abaixo para atualizar suas credenciais.</p>
                            </div>

                            <form action="/login/redefinir/confirm" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control rounded-4" id="resetEmail" name="email" placeholder="nome@exemplo.com" required>
                                    <label for="resetEmail"><i class="bi bi-envelope me-2"></i>Confirme seu E-mail</label>
                                </div>

                                <hr class="border-secondary opacity-10 my-4">

                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control rounded-4" id="newPassword" name="password" placeholder="Nova Senha" required>
                                    <label for="newPassword"><i class="bi bi-lock me-2"></i>Nova Senha</label>
                                </div>

                                <div class="form-floating mb-4">
                                    <input type="password" class="form-control rounded-4" id="confirmNewPassword" name="confirmpassword" placeholder="Confirmar Senha" required>
                                    <label for="confirmPassword"><i class="bi bi-check-circle me-2"></i>Confirmar Nova Senha</label>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 btn-lg rounded-pill fw-bold shadow-sm mb-3">
                                    Atualizar Senha
                                </button>
                                
                                <div class="text-center mt-4">
                                    <a href="/login/index" class="text-muted text-decoration-none small fw-bold">
                                        <i class="bi bi-arrow-left me-1"></i> Cancelar e voltar ao Login
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('includes/footer') %>